<div class="container">
  <h1>DailyLive</h1>
  <div id=event-category>
    <h2><%= @category.name%></h2>
    <%= mail_to "lambertcamille23@gmail.com", "Contactez-nous" %>
    <p class="text-center mb-5">Rendez vous le:</p>
  </div>

  <div class="datepicker">
    <% 7.times do |i| %>
      <% current_day = @today + i.days %>
      <%= link_to category_events_path(@category.slug, day: current_day), class: "day #{'active' if current_day == @selected_day}" do %>
        <span class="name"><%= day_name(current_day.wday) %></span>
        <span class="number"><%= current_day.day %></span>
      <% end %>
    <% end %>
  </div>

  <% if @events.empty? %>
    <p>Pas de live ajd</p>
  <% else %>
    <% @events.each do |event| %>
      <div class="event-card">
        <div class="hour">
          <%= event.date.strftime('%Hh%M') %>
        </div>
        <div class="description">
          <h5>
            <%= event.title %>
          </h5>
          <p>
            <%= event.description %>
          </p>
        </div>
        <%= link_to "Participer", event.link %>
      </div>
    <% end %>
  <% end %>
</div>
